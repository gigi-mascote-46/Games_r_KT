<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/backgroundLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Imagem de fundo -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_roulette"
        android:contentDescription="Imagem de fundo russian roulette"
        android:alpha="0.3" />

    <!-- Botão de carregar saldo -->
    <LinearLayout
        android:id="@+id/saldoLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/textSaldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="€1000"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/btnCarregarSaldo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_coin"
            android:contentDescription="Carregar Saldo" />
    </LinearLayout>

    <!-- Conteúdo principal sobreposto -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="213dp"
            android:layout_height="79dp"
            android:layout_marginBottom="20dp"
            android:text="Vamos começar!"
            android:textColor="#FF4444"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/spinButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A girar!"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>
